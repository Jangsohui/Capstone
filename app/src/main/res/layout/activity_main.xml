<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/peoples"
        android:padding="10dp"
        android:layout_margin="50dp"
        android:layout_centerInParent="true"
        android:layout_above="@id/edtId" />
    <!-- 사진 저장 경로 C:\Users\wert7\AndroidStudioProjects\Capstone\app\src\main\res\drawable\peoples -->

    <EditText
        android:id="@+id/edtId"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="아이디" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="비밀번호"
        android:layout_below="@id/edtId"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_below="@id/edtPassword"
        android:layout_marginTop="16dp"
        android:backgroundTint="#F25C51"
        android:layout_centerInParent="true"
        android:text="로그인" />

    <TextView
        android:id="@+id/tvSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이 어플은 경기과학기술대학교 학생만 사용이 가능합니다."
        android:layout_below="@id/btnLogin"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_marginTop="16dp" />

</RelativeLayout>